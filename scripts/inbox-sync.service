[Unit]
Description=Nylas Sync Engine - Sync Service
After=network.target

[Service]
User=inbox
Group=inbox
WorkingDirectory=/opt/inboxapp
Environment=VIRTUAL_ENV=/opt/inboxapp/.venv
Environment=PATH=$VIRTUAL_ENV/bin:$PATH
Environment=PYTHONPATH=/opt/inboxapp
Environment=MAILSYNC_PROCESSES=12
SyslogIdentifier=inbox-sync
ExecStart=/opt/inboxapp/.venv/bin/python /opt/inboxapp/bin/inbox-start --prod
Restart=always

[Install]
WantedBy=multi-user.target

